generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  email        String @unique
  passwordHash String
  name         String
  universityId String
  regNumber    String @unique
  personalInfo PersonalInfo?
  
 
  // Add other fields as needed
}


model University {
  id       String    @id @map("_id")
  name     String
  location String
  students Student[]
}

// Define the Student model
model Student {
  id                  String    @id @map("_id")
  firstName           String
  lastName            String
  universityId        String
  regestrationNumber  String  @unique
  studentEmail        String  @unique
  university          University @relation(fields: [universityId], references: [id])
  hasFees             Boolean
  hasUpkeep           Boolean
  hasStationaly       Boolean
  loan                Loan?      @relation(fields: [loanId], references: [id])
  loanId              Int?

}

model Loan {
  id         Int       @id @map("_id")
  fees       Int
  upkeep     Int
  stationaly Int
  students   Student[]
}
model PersonalInfo {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  surname       String
  firstname     String
  othername     String
  dateofbirth   String
  sex           String
  home          String
  phonenumber   String
 
  userIDD          User     @relation(fields: [userId], references: [id])
  userId        String    @unique @db.ObjectId
}
